{
    "name": "nodecg-io",
    "private": true,
    "scripts": {
        "clean": "tsc -b --clean",
        "update": "node .scripts/update-paths.mjs",
        "prebuild": "npm run update",
        "build": "tsc -b",
        "postbuild": "npm run build --workspaces --if-present",
        "test": "jest",
        "watchTest": "jest --watch",
        "coverage": "jest --coverage",
        "rebuild": "npm run clean && npm run build",
        "prewatch": "npm run update",
        "watch": "concurrently npm:watch-*",
        "watch-index": "tsc -b -w --pretty",
        "watch-workspaces": "npm run watch --workspaces --if-present",
        "lint": "eslint . --ext ts --ignore-pattern '**/*.d.ts'",
        "format": "prettier --write \"./**/*.{ts,html,css,json}\"",
        "format-pre-commit": "pretty-quick --staged --pattern '*/**/*.{ts,html,css,json}'",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.6.0",
        "@typescript-eslint/parser": "^5.6.0",
        "concurrently": "^6.3.0",
        "eslint": "^8.4.1",
        "husky": "^7.0.4",
        "nodemon": "^2.0.7",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.0",
        "typescript": "^4.2.4"
    },
    "workspaces": [
        "nodecg-io-core",
        "nodecg-io-core/dashboard",
        "services/*",
        "samples/*",
        "utils/*"
    ]
}
