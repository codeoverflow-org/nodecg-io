{
	"compilerOptions": {
		// Output related
		"target": "es2017",
		"importHelpers": true,

		// Module resolution
		"moduleResolution": "node",

		// Type checking
		"lib": ["es2017"],
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		
		"module": "CommonJS",
		"types": [
			"node"
		]
	},
	"compileOnSave": true
}