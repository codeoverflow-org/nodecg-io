{
    // Hides js, js map and ts definition files, that are generated by the build process, in the explorer windows of vs code
    "vscode.tsc.compiler.alertTSConfigChanges": "never",
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.js.map": true,
        "**/*.d.ts": { "when": "$(basename).ts" }
    }
}
