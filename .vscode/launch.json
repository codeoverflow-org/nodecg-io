{
    // This custom vscode launch configuration can be used to quickly restart nodecg-io after changes
    // Requires the nodecg-io folder inside the nodecg installation. Otherwise, change the "program" path
    // Recommended to be used together with "TypeScript Auto Compiler" plugin for best workflow
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NodeCG with Nodemon",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/../index.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}